<%= form_with(model: cliente, local: true) do |form| %>
  <% if cliente.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cliente.errors.count, "error") %> prohibited this cliente from being saved:</h2>

      <ul>
      <% cliente.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :nombres %>
    <%= form.text_field :nombres, id: :cliente_nombres, class:'form-control', required:'' %>
  </div>

  <div class="form-group">
    <%= form.label :apellidos %>
    <%= form.text_field :apellidos, id: :cliente_apellidos, class:'form-control' , required:''  %>
  </div>

  <div class="form-group">
    <%= form.label :identificacion %>
    <%= form.number_field :identificacion, id: :cliente_identificacion , class:'form-control' , required:'' %>
  </div>
  
  <div class="form-group">
    <div class="row"> 
    <div class ="col">
      <% tipoId = options_from_collection_for_select(@tipoId, "id","valor",cliente.idtipoidentificacion) %>
      <label for="idtipoidentificacion">Tipo ID:</label>
      <%= form.select(:idtipoidentificacion, tipoId,{},{class:"form-control"} ) %>
    </div>
    <div class ="col">
      <% idGenero = options_from_collection_for_select(@idGenero, "id","valor",cliente.idgenero) %>
      <label for="idgenero">Genero:</label>
      <%= form.select(:idgenero, idGenero,{},{class:"form-control"} ) %>
    </div>
    </div>
  </div>  
 

  <div class="form-group">
    <%= form.label :razonSocial %>
    <%= form.text_field :razonSocial, id: :cliente_razonSocial, class:'form-control' , required:'' %>
  </div>

  <div class="form-group">
    <%= form.label :correo %>
    <%= form.text_field :correo, id: :cliente_correo, class:'form-control' , required:'' %>
  </div>

  <div class="form-group">
    <%= form.label :direccion %>
    <%= form.text_field :direccion, id: :cliente_direccion, class:'form-control' , required:'' %>
  </div>

  <div class="form-group">
    <%= form.label :telefonos %>
    <%= form.number_field :telefonos, id: :cliente_telefonos, class:'form-control' , required:'' %>
  </div>

  <div class="form-group">
  <div class="row"> 
    <div class ="col">
      <% tipoCliente = options_from_collection_for_select(@tipoCliente, "id","valor",cliente.idtipocliente) %>
      <label for="idtipocliente">Tipo Cliente:</label>
      <%= form.select(:idtipocliente, tipoCliente,{},{class:"form-control"} ) %>
    </div>
    <div class ="col">
      <% catcliente = options_from_collection_for_select(@catcliente, "id","valor",cliente.idcategoriacliente) %>
      <label for="idcategoriacliente" >Tipo Cliente:</label>
      <%= form.select(:idcategoriacliente, catcliente,{},{class:"form-control"} ) %>
    </div>
  </div>
  </div>

  <div class="actions">
    <%= form.submit "Guardar", class:'btn btn-success' %>
  </div>
<% end %>
