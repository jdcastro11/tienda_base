<p id="notice"><%= notice %></p>

<h1>Options</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>Idpadre</th>
      <th>Opcion</th>
      <th>Url</th>
      <th>Estadoopcion</th>
      <th>Orden</th>
      <th>Eshoja</th>
      <th>Controller</th>
      <th>Eliminado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @options.each do |option| %>
      <tr>
        <td><%= option.id %></td>
        <td><%= option.idpadre %></td>
        <td><%= option.opcion %></td>
        <td><%= option.url %></td>
        <td><%= option.estadoopcion %></td>
        <td><%= option.orden %></td>
        <td><%= option.eshoja %></td>
        <td><%= option.controller %></td>
        <td><%= option.eliminado %></td>
        <td><%= link_to 'Ver', option, class:"btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_option_path(option), class:"btn btn-primary"  %></td>
        <td><%= link_to 'Eliminar', option, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

