
<%= form_with(model: valorparametro, local: true,id:"frm_valp") do |form| %>
 
  <% if valorparametro.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(valorparametro.errors.count, "error") %> prohibited this valorparametro from being saved:</h2>

      <ul>
      <% valorparametro.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="row">
      <div class="col">
        <label for="valor">Valor:</label>
        <%= form.text_field :valor, id: :valorparametro_valor %>
      </div>
      <div class="col">
        <label for="parametro_id">Parametro:</label>
        <%= form.text_field :parametro_id, id: :valorparametro_parametro_id,:readonly => true,value:@idp, class:"form-control" %>
      </div>
      <div class="col">
        <label for="valor">Estado:</label>
      <%= form.text_field :estadovalorparametro, id: :valorparametro_estadovalorparametro, class:"form-control" %>
      </div>
      <div class="col">
        <label for="orden">Orden:</label>
      <%= form.text_field :orden, id: :valorparametro_orden ,class:"form-control"%>
      </div>
      <div class="col">
        <label for="idpadre">Padre:</label>
        <%= form.number_field :idpadre, id: :valorparametro_idpadre, class:"form-control" %>
      </div>   
    </div>
  </div>

  <div class="actions">
  <div class="row">
      <div class="col">
        <%= form.submit "Guardar",class:"btn btn-warning btn-block btn-large" %>
      </div>
      <div class="col">
        <% if @swope == 1 %>
          <%= link_to 'Eliminar', :valorparametro,class:"btn btn-danger btn-block btn-large", method: :delete, data: { confirm: 'Esta Seguro de ELiminar este Re?' } %>
        <% end %>
      </div>
      <div class="col">
        <a href="/valp/<%= @idp %>" class="btn btn-info btn-block btn-large">Regresar</a>
      </div>
      <% end %>
  </div>
